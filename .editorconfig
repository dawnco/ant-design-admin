root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 2
max_line_length = 100

[*.{yml,yaml,json}]
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[Makefile]
indent_style = tab

[*.{ts, vue, js}]
# ij 格式
# https://github.com/plan2net/phpstorm-code-style/blob/master/editorconfig
ij_typescript_use_double_quotes = false
ij_typescript_use_semicolon_after_statement = true
ij_typescript_chained_call_dot_on_new_line = true
ij_typescript_indent_chained_calls = true
ij_typescript_enforce_trailing_comma = keep
ij_vue_indent_children_of_top_level = script, template

